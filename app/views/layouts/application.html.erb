<!DOCTYPE html>
<html>
  <head>
    <title>Satisfaction</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Satisfaction", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <!-- <li><%#= link_to "Home", root_path %></li> root_pathはロゴから移動できるからコメントアウト -->
            <% if logged_in? %>
              <!-- <li><%#= image_tag @user.profile.user_image.url(:thumb) %></li> -->
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", '#' %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
            <li class="menu"><%= link_to "Sign up now!", new_user_path, class: "btn btn-lg btn-primary"%></li> <!-- 自身でクラス作成 -->
              <li class="menu"><%= link_to "Log in", login_path, class:"btn btn-lg btn-primary" %></li> <!-- 自身でクラス作成 -->
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <div class="container">
      <%= yield %>
    </div>

  </body>

</html>
