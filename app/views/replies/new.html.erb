<h1>Reply</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@reply) do |f| %>

        <%= f.label :user_id %>
        <%= f.text_field :user_id %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :body %>
        <%= f.text_area :body, :size => "20x10" %>

        <%= f.submit "Create my reply", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
